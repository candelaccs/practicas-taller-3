// compila pero no anda //


Program HelloWorld(output);
type
 
 arbol = ^nodo;
 nodo = record
  dato:integer;
  HI: arbol;
  HD: arbol;
 end;

procedure agregar (var a: arbol; num:integer);

begin
 if (a= nil) then begin
  a^.dato:= num;
  a^.HI:= nil;
  a^.HD:= nil;
 end
 else begin
  if (num <= a^.dato) then
   agregar (a^.HI, num)
  else 
   agregar (a^.HD, num);
 end;
end;

procedure preorden (a: arbol);
begin
 if (a<> nil) then begin
  writeln (a^.dato, ' ');
  preorden (a^.HI);
  preorden (a^.HD);
 end;
end;

procedure postorden (a: arbol);
begin
 if (a <> nil) then begin
  postorden (a^.HI);
  preorden (a^.HD);
  writeln (a^.dato, ' ');
 end;
end;

procedure enorden (a: arbol);
begin
 if (a <> nil) then begin
  enorden (a^.HI);
  writeln (a^.dato, ' ');
  enorden (a^.HD);
 end;
end;
  
  
var
 a: arbol;
 num: integer;
 
begin
 a:= nil;
 writeln ('ingresar: ');
 readln (num);
 while (num <> 0) do begin
  agregar (a, num);
  writeln ('ingresar: ');
  readln (num);
 end;
 
 writeln ('se muestran los elementos de la manera en orden ');
 enorden (a);
 
 writeln ('se muestran los elementos de la manera preorden ');
 preorden (a);
 
 writeln ('se muestran los elementos de la manera postorden ');
 postorden (a);

end.
